[Unit]
Description=Scraping Script 37 Service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=sahusujal_dev2004
WorkingDirectory=/home/sahusujal_dev2004/scrapping
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/bin/python3 /home/sahusujal_dev2004/scrapping/scripts/script37/script37.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/scraping/script37.log
StandardError=append:/var/log/scraping/script37.error.log

# Resource limits (optional - uncomment and adjust as needed)
# MemoryLimit=2G
# CPUQuota=50%

[Install]
WantedBy=multi-user.target
