[Unit]
Description=Scraping Script 42 Service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=sahusujal_dev2004
WorkingDirectory=/home/sahusujal_dev2004/scrapping
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/bin/python3 /home/sahusujal_dev2004/scrapping/scripts/script42/script42.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/scraping/script42.log
StandardError=append:/var/log/scraping/script42.error.log

# Resource limits (optional - uncomment and adjust as needed)
# MemoryLimit=2G
# CPUQuota=50%

[Install]
WantedBy=multi-user.target
